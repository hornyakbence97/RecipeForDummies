
@{
    ViewData["Title"] = "CreateCategory";
    Layout = null;
    @model string
}

@{ 
    if (Model != null)
    {
       <h3>Succefully created category: @Model </h3>
    }
}
<h2>CreateCategory</h2>

<form asp-action="CreateCategory" asp-controller="Recipe"  method="post">

    <div class="form-group">
        <label for="Title">Category name:</label>
        <input type="text" class="form-control" id="Title" placeholder="Enter new category..." name="Category">
    </div>


    <button type="submit"  class="btn btn-default">Add Category</button>
</form>